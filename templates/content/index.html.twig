{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<section class="container">
		{% for article in articles %}
			<h2>{{ article.title }}</h2>
			<p>{{ article.content }}</p>
			{% if article.author %}
			<p>{{ article.author }}</p>
			{% endif %}
			
			<p>{{ article.createdat|date("d/m/Y h:m") }}</p>
			<p>{{ article.updatedat|date("d/m/Y h:m") }}</p>
		{% endfor %}
	</section>
{% endblock %}
