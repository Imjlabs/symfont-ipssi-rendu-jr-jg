{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<section class="container">
		{% for article in articles %}
			<h2>{{ article.title }}</h2>
			<p>{{ article.updatedat|date("d/m/Y h:m") }}</p>
			<p>{{ article.content }}</p>
			<p>{{ article.author.firstname }}
				{{ article.author.lastname }}</p>
			<p>{{ article.createdat|date("d/m/Y h:m") }}</p>
		{% endfor %}
	</section>
{% endblock %}
