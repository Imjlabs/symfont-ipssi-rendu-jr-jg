{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<section class="container products">
		{% for product in products %}
			<a
				href="{{ path('app_product', {'id': product.id})}}">
				{# {% if product.stock > 0 %} #}
				<div class="product">
					<h2>{{ product.title }}</h2>
					<p>{{ product.description }}</p>
					<p>Prix :
						{{ product.price }}
						€</p>
					<p>Stock :
						{{ product.stock }}</p>
					<p>Catégorie :
						{{ product.category.name }}</p>
					<p>Vendeur :
						{{ product.seller.firstname }}
						{{ product.seller.firstname }}</p>
				</div>
				{# {% endif %} #}
			</a>
		{% endfor %}
	</section>
{% endblock %}
