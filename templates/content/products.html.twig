{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<section class="container">
		<div class="form">
			{{ form_start(form) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}
		</div>
		<div class="products">
			{% for product in products %}
				<a href="{{ path('app_product', {'id': product.id})}}">
					<div class="product">
						<h2>{{ product.title }}</h2>
						<p>{{ product.description }}</p>
						<p>Prix :
							{{ product.price }}
							€</p>
						<p>Stock :
							{{ product.stock }}</p>
						<p>Catégorie :
							{{ product.category.name }}</p>
						<p>Vendeur :
							{{ product.seller.firstname }}
							{{ product.seller.firstname }}</p>
					</div>
				</a>
			{% endfor %}
		</div>
	</section>
{% endblock %}
